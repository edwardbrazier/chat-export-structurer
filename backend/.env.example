# Server mode: 'api' or 'mcp'
MODE=api

# API Server
API_PORT=5000
API_HOST=0.0.0.0

# Database
DATABASE_PATH=../my_chats.sqlite

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6335
QDRANT_COLLECTION=chat_messages

# MCP Server Configuration
# Transport mode: 'stdio' (Claude Desktop), 'http' (ChatGPT), or 'both'
MCP_TRANSPORT=stdio
# HTTP transport settings (for ChatGPT)
MCP_HTTP_PORT=3001
MCP_HTTP_HOST=127.0.0.1
MCP_HTTP_PATH=/mcp
# MCP_ALLOWED_HOSTS=localhost,127.0.0.1  # Optional: Comma-separated list for DNS rebinding protection

# Privacy Settings
# Note: Qdrant telemetry is disabled in docker-compose.yml (QDRANT__TELEMETRY_DISABLED=true)
# All data processing happens locally - no external connections
# See PRIVACY_CONFIG.md for details

# Python Scripts
PYTHON_SCRIPTS_PATH=../src
